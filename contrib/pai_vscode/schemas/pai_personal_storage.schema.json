{
    "type": "object",
    "properties": {
        "spn": {
            "type": "string",
            "description": "storage server display name",
            "minLength": 1
        },
        "data": {
            "oneOf": [
                {
                    "type": "object",
                    "description": "Azure blob",
                    "properties": {
                        "containerName": {
                            "type": "string"
                        },
                        "accountName": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        }
                    },
                    "required": ["containerName", "accountName", "key"]
                },
                {
                    "type": "object",
                    "description": "NFS",
                    "properties": {
                        "rootPath": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        }
                    },
                    "required": ["rootPath", "address"]
                }
            ]
        }
    },
    "required": ["spn", "data"]
}